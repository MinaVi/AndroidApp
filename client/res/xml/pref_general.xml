<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- NOTE: EditTextPreference accepts EditText attributes. -->
    <!-- NOTE: EditTextPreference's summary should be set to its value by the activity code. -->
    <EditTextPreference
        android:capitalize="words"
        android:defaultValue="@string/pref_name"
        android:inputType="textCapWords"
        android:key="name"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="@string/pref_name_title" />

    <!--
         NOTE: Hide buttons to simplify the UI. Users can touch outside the dialog to
         dismiss it.
    -->
    <!-- NOTE: ListPreference's summary should be set to its value by the activity code. -->

    <ListPreference
        
        android:defaultValue="-1"
        android:entries="@array/pref_sex_list"
        android:entryValues="@array/pref_sex_list"
        android:key="sex"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="@string/pref_sex_title" />
        <ListPreference
        android:defaultValue="Japanese"
        android:entries="@array/pref_lang_list"
        android:entryValues="@array/pref_lang_list"
        android:key="lang"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="@string/pref_lang_title" />
    <ListPreference
        android:defaultValue="-1"
        android:entries="@array/pref_age_list"
        android:entryValues="@array/pref_age_list"
        android:key="age"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="@string/pref_age_title" />
    <ListPreference
        android:defaultValue="-1"
        android:entries="@array/pref_country_list"
        android:entryValues="@array/pref_country_list"
        android:key="country"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="@string/pref_country_title" />

    <CheckBoxPreference
        android:defaultValue="true"
        android:key="enabled_location"
        android:summary="@string/pref_enabled_location_abs"
        android:title="@string/pref_enabled_location_title" />
    <CheckBoxPreference
        android:defaultValue="false"
        android:key="pref_emergency_flag"
        android:summary="@string/pref_emergency_flag_abs"
        android:title="@string/pref_emergency_flag_title" />

</PreferenceScreen>